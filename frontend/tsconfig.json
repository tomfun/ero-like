{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "preserveValueImports": true,
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": false,
    "lib": ["es2017", "DOM"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
